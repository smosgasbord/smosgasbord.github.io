---
import data from '../content/funnelsData.json';
const testimonials = data.funnels[0].testimonials;
---


<div class="space-y-4">
  {testimonials.map((testimonial) => (
    <div class="bg-white rounded-lg shadow-md p-6">
      <p class="text-gray-600 italic">"{testimonial.text}"</p>
      <div class="mt-4">
        <p class="font-semibold text-primary">{testimonial.name}</p>
        <p class="text-sm text-gray-500">{testimonial.role}</p>
      </div>
    </div>
  ))}
</div>